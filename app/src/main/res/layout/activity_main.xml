<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tienda de mÃ³viles Crazy Cell"
        android:textSize="38dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

    <Button
        android:id="@+id/botonVer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ver BB.DD."
        android:onClick="onClickVer"/>

    <Button
        android:id="@+id/botonEditar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Editar BB.DD."
        android:onClick="onClickEditar"/>

    <Button
        android:id="@+id/botonBorrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Borrar BB.DD."/>

    </LinearLayout>




</RelativeLayout>